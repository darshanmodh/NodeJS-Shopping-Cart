<% include _layouts/header %>

<div class="row">

    <h3 class="page-header"> <%= p.title %> </h3>

    <div class="col-xs-12 col-md-5">
        <a data-fancybox="gallery" href="/product_images/<%= p.id %>/<%= p.image %>">
            <img class="spi" src="/product_images/<%= p.id %>/<%= p.image %>">
        </a>
        <br />
    </div>

    <div class="col-xs-12 col-md-5">
        <p><%= p.desc %></p>
        <p>$<%= parseFloat(p.price).toFixed(2) %></p>
        <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
    </div>

    
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image) { %>
                <% if(image != "thumbs" && image != ".DS_Store") { %>
                    <li>
                        <a data-fancybox="gallery" href="/product_images/<%= p.id %>/gallery/<%= image %>">
                            <img src="/product_images/<%= p.id %>/gallery/thumbs/<%= image %>">
                        </a>
                    </li>
                <% } %>
            <% }); %>
        </ul>
    </div>

</div>

<% include _layouts/footer %>